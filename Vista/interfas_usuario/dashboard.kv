<DashboardScreen>:
    name: "dashboard"

    MDCard:
        size_hint: 1, 1
        elevation: 10

        MDBoxLayout:
            orientation: "horizontal"

            MDBoxLayout:
                orientation: "vertical"
                size_hint: 0.25, 1
                height: self.minimum_height
                padding: "10dp"
                spacing: "8dp"
                md_bg_color: 0.95, 0.95, 0.95, 1

                MDTextButton:
                    text: "Usuario"

                MDTextButton:
                    text: "Monederos"

                MDTextButton:
                    text: "Ingresos"
                    on_release: app.root.current = "interfas_ingresos"

                MDTextButton:
                    text: "Gastos"

                MDTextButton:
                    text: "Inversion"
                    
                MDTextButton:
                    text: "Analisis"

                Widget:

                MDTextButton:
                    text: "Cerrar sesión"
                    on_release: app.root.current = "login"

            # ==================================================
            # ÁREA PRINCIPAL (MAQUETADO)
            # ==================================================
            MDBoxLayout:
                orientation: "horizontal"
                padding: "12dp"
                spacing: "12dp"

                # -------- COLUMNA IZQUIERDA --------
                MDBoxLayout:
                    orientation: "vertical"
                    spacing: "10dp"

                    MDLabel:
                        text: "Gráfico de ingresos"
                        halign: "center"
                        font_style: "H6"
                        size_hint_y: None
                        height: "40dp"

                    MDBoxLayout:
                        md_bg_color: 0.9, 0.9, 0.9, 1

                    MDLabel:
                        text: "Gráfico de CDT"
                        halign: "center"
                        font_style: "H6"
                        size_hint_y: None
                        height: "40dp"

                    MDBoxLayout:
                        md_bg_color: 0.9, 0.9, 0.9, 1

                # -------- COLUMNA DERECHA --------
                MDBoxLayout:
                    orientation: "vertical"
                    spacing: "10dp"

                    MDLabel:
                        text: "Gráfico de gastos"
                        halign: "center"
                        font_style: "H6"
                        size_hint_y: None
                        height: "40dp"

                    MDBoxLayout:
                        md_bg_color: 0.9, 0.9, 0.9, 1

                    MDLabel:
                        text: "Gráfico de participaciones"
                        halign: "center"
                        font_style: "H6"
                        size_hint_y: None
                        height: "40dp"

                    MDBoxLayout:
                        md_bg_color: 0.9, 0.9, 0.9, 1
