#:import dp kivy.metrics.dp

<NuevoIngresoScreen>:
    name: "nuevo_ingreso"

    MDCard:
        size_hint: 1, 1
        elevation: 10
        padding: dp(16)

        MDBoxLayout:
            orientation: "vertical"
            size_hint: 0.1, 1
            spacing: dp(12)

            # ---------- BOTÓN ATRÁS ----------
            MDBoxLayout:
                size_hint_y: None
                height: dp(40)

                MDTextButton:
                    text: "Atrás"
                    on_release: app.root.current = "interfas_ingresos"

            # ---------- FORMULARIO ----------
            MDTextField:
                id: nombre_ingreso
                mode: "round"
                hint_text: "Nombre o concepto del ingreso"
                on_text: root.on_text_change()

            MDTextField:
                id: fecha_inicio
                mode: "round"
                hint_text: "Fecha inicio"
                on_text: root.on_text_change()

            MDTextField:
                id: fecha_fin
                mode: "round"
                hint_text: "Fecha fin"
                on_text: root.on_text_change()

            MDBoxLayout:
                id: tipos
                hint_text: "indique si es ingreso es (Ocacional o Recurrente)"

            MDTextField:
                id: tipo_ingreso
                mode: "round"
                hint_text: "Tipo de ingreso"
                on_text: root.on_text_change()

            MDTextField:
                id: frecuencia
                mode: "round"
                hint_text: "Cada cuanto se registra el ingreso, 0 para ocacionales"
                on_text: root.on_text_change()

            MDTextField:
                id: moneda
                mode: "round"
                hint_text: "pais de la moneda"
                on_text: root.on_text_change()

            MDTextField:
                id: monto
                mode: "round"
                hint_text: "Monto"
                on_text: root.on_text_change()

            MDFillRoundFlatButton:
                id: registro_ingreso
                text: "Registrar"
                disabled: True
                pos_hint: {"center_x": 0.5}
