<LoginScreen>:
    name: "login_app"

    MDCard:
        size_hint: None, None
        size: 300, 450
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 20
        orientation: "vertical"

        MDIcon:
            icon: "account"
            halign: "center"
            font_size: 120

        MDTextField:
            id: username
            mode: "round"
            icon_left: "account-check"
            hint_text: "Username"
            size_hint_x: None
            width: 220
            pos_hint: {"center_x": 0.5}

        MDTextField:
            id: password
            mode: "round"
            icon_left: "key-variant"
            hint_text: "Password"
            password: True
            size_hint_x: None
            width: 220
            pos_hint: {"center_x": 0.5}

        MDFillRoundFlatButton:
            text: "Login"
            pos_hint: {"center_x": 0.5}
            on_release: 

        MDTextButton:
            text: "Crear Usuario"
            pos_hint: {"center_x": 0.5}
            on_release:
                app.change_screen("crear_usuario")

        MDTextButton:
            text: "Recuperar Contrase√±a"
            pos_hint: {"center_x": 0.5}
            on_release:
                app.change_screen("recuperar_password")