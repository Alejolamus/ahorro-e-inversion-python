        elevation: 10
        padding: 25
        spacing: 20
        orientation: "vertical"

        

        MDTextField:
            id: username
            mode: "round"
            icon_left: "account-check"
            hint_text: "Nombre Completo"
            size_hint_x: None
            width: 220
            pos_hint: {"center_x": 0.5}
            on_text: root.on_text_change()

        MDTextField:
            id: correo
            mode: "round"
            icon_left: "account-check"
            hint_text: "Correo"
